---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import { getPermalink } from '~/utils/permalinks';

const metadata = {
  title: 'Alex Plaza - Video Editor',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      links={[
        { text: 'Home', href: '#hero' },
        { text: 'About', href: '#about' },
        { text: 'Portfolio', href: '#porfolio' },
        { text: 'Contact', href: '#contact' },
      ]}
      actions={[
        {
          text: 'Contact Me',
          href: '#contact',
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>

  <!-- Hero Widget ******************* -->

  <Hero
    id="hero"
    title="Alex Plaza"
    tagline="Video Editor"
    actions={[{ variant: 'primary', text: 'Contact Me', href: '#contact' }]}
  >
    <Fragment slot="subtitle">
      I'm a Video Editor passionate about creating compelling visual stories. <br /> With experience in video production and post-production, I transform raw footage into engaging narratives that captivate audiences.
    </Fragment>
  </Hero>

  <!-- Content Widget **************** -->

  <Content
    id="about"
    columns={2}
    items={[
      {
        icon: 'tabler:brand-instagram',
        callToAction: {
          target: '_blank',
          text: '@lexcosmo',
          href: 'https://instagram.com/lexcosmo',
        },
      },
      {
        icon: 'tabler:brand-instagram',
        callToAction: {
          target: '_blank',
          text: '@humorgringopo',
          href: 'https://instagram.com/humorgringopo',
        },
      },
      {
        icon: 'tabler:brand-tiktok',
        callToAction: {
          target: '_blank',
          text: '@humorgringopo',
          href: 'https://tiktok.com/@humorgringopo',
        },
      },
      {
        icon: 'tabler:brand-youtube',
        callToAction: {
          target: '_blank',
          text: '@humorgringopo',
          href: 'https://youtube.com/@humorgringopo',
        },
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1535982330050-f1c2fb79ff78?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
      alt: 'Profile Image',
      loading: 'eager',
    }}
  >
    <Fragment slot="content">
      <h2 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">About Me</h2>
      <p>
        I'm a Marketing student with a passion for creativity and entertainment. I've taught myself video editing and work as an app designer, but my true calling is making people laugh as a stand-up comedian.
      </p>
      <br />
      <p>
        Through my social media channels, I create and translate comedy content, bringing humor to Spanish-speaking audiences. My work has gained viral attention, and I'm constantly exploring new ways to connect with audiences through video content.
      </p>
      <br />
      <p>
        As a <a href="https://platzi.com/ruta-compartida/english/g1716074917-426ba8e0-ec21-4e32-af12-1b9a43d10e28/" target="_blank" class="text-blue-600 hover:underline dark:text-blue-400">certified C1 English speaker</a>, I create engaging bilingual content that bridges cultural gaps through humor.
      </p>
      <br />
      <p>Connect with me on my social media platforms:</p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Video Carousel Widget ********* -->

  <div id="porfolio" class="py-24 sm:py-32 relative overflow-hidden">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">Viral Videos</h2>
        <p class="mt-2 text-lg leading-8 text-gray-600 dark:text-gray-300">
          Check out some of my most popular comedy translations and original content
        </p>
      </div>
    </div>
    
    <!-- Horizontal Scrolling Container -->
    <div class="mt-16 relative">
      <div class="absolute left-0 top-0 bottom-0 w-32 bg-gradient-to-r from-white dark:from-gray-900 to-transparent z-10"></div>
      <div class="absolute right-0 top-0 bottom-0 w-32 bg-gradient-to-l from-white dark:from-gray-900 to-transparent z-10"></div>
      
      <div class="overflow-x-auto pb-8 -mx-6 sm:-mx-8 lg:-mx-12 px-24 sm:px-32 lg:px-48">
        <div class="flex gap-8 min-w-max">
          <!-- Video Placeholder 1 -->
          <div class="flex-shrink-0 w-[300px] sm:w-[400px]">
            <div class="relative w-full aspect-[9/16] bg-gray-200 dark:bg-gray-800 rounded-lg overflow-hidden">
              <!-- Add your embedded video here -->
            </div>
          </div>
          <!-- Video Placeholder 2 -->
          <div class="flex-shrink-0 w-[300px] sm:w-[400px]">
            <div class="relative w-full aspect-[9/16] bg-gray-200 dark:bg-gray-800 rounded-lg overflow-hidden">
              <!-- Add your embedded video here -->
            </div>
          </div>
          <!-- Video Placeholder 3 -->
          <div class="flex-shrink-0 w-[300px] sm:w-[400px]">
            <div class="relative w-full aspect-[9/16] bg-gray-200 dark:bg-gray-800 rounded-lg overflow-hidden">
              <!-- Add your embedded video here -->
            </div>
          </div>
          <!-- Video Placeholder 4 -->
          <div class="flex-shrink-0 w-[300px] sm:w-[400px]">
            <div class="relative w-full aspect-[9/16] bg-gray-200 dark:bg-gray-800 rounded-lg overflow-hidden">
              <!-- Add your embedded video here -->
            </div>
          </div>
          <!-- Video Placeholder 5 -->
          <div class="flex-shrink-0 w-[300px] sm:w-[400px]">
            <div class="relative w-full aspect-[9/16] bg-gray-200 dark:bg-gray-800 rounded-lg overflow-hidden">
              <!-- Add your embedded video here -->
            </div>
          </div>
          <!-- Video Placeholder 6 -->
          <div class="flex-shrink-0 w-[300px] sm:w-[400px]">
            <div class="relative w-full aspect-[9/16] bg-gray-200 dark:bg-gray-800 rounded-lg overflow-hidden">
              <!-- Add your embedded video here -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Content Widget **************** -->

  <Content
    title="Elevating visual narratives"
    subtitle="Embark on a design journey that surpasses pixels, entering a realm of imagination. Explore my portfolio, where passion and creativity converge to shape enthralling visual narratives."
    isReversed
    items={[
      {
        title: 'Description:',
        description:
          'Developed a comprehensive brand identity for a tech startup, Tech Innovators, specializing in disruptive innovations. The goal was to convey a modern yet approachable image that resonated with both corporate clients and tech enthusiasts.',
      },
      {
        title: 'Role:',
        description:
          'Led the entire branding process from concept to execution. Created a dynamic logo that symbolized innovation, selected a vibrant color palette, and I designed corporate stationery, website graphics, and social media assets.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1658248165252-71e116af1b34?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=928&q=80',
      alt: 'Tech Design Image',
    }}
    callToAction={{
      target: '_blank',
      text: 'Go to the project',
      icon: 'tabler:chevron-right',
      href: '#',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Project 1: <br /><span class="text-2xl">Brand identity for tech innovators</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent={true}
    items={[
      {
        title: 'Description:',
        description:
          'Designed a captivating event poster for an art and music festival, "ArtWave Fusion," aiming to showcase the synergy between visual art and music genres.',
      },
      {
        title: 'Role:',
        description: `Translated the festival's creative theme into a visually striking poster. Used bold typography, vibrant colors, and abstract elements to depict the fusion of art and music. Ensured the design captured the festival's vibrant atmosphere.`,
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1619983081563-430f63602796?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
      alt: 'Art and Music Poster Image',
    }}
    callToAction={{
      target: '_blank',
      text: 'Go to the project',
      icon: 'tabler:chevron-right',
      href: '#',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Project 2: <br /><span class="text-2xl">Event poster for art & music festival</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    id="contact"
    title="Get In Touch"
    subtitle="Have a project in mind or interested in working together? I'd love to hear from you!"
    actions={[
      {
        variant: 'primary',
        text: 'Send Email',
        href: 'mailto:plaza.ad@gmail.com',
        target: '_blank',
        icon: 'tabler:mail',
      },
    ]}
  />
</Layout>
